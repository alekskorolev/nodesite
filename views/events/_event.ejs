<div class='event'>
	<div class='header'>
		<%
			var date = new Date(event.created);

			var day = date.getDate()<10? '0' + date.getDate() : date.getDate();
			var month = date.getMonth()<10? '0' + date.getMonth() : date.getMonth();
			var year = date.getFullYear();

			beautyDate = day + '.' + month + '.' + year;
		%>
		<%= beautyDate %>
	</div>
	<div class='content'>
		<div class='name'>
			<a href='/event/<%= event._id %>'><%= event.name %></a>
		</div>
		<div class='description'>
			<%= event.description %>
		</div>
		<div class='media'>
			<div class='photo'>
				<div class='header'>
				</div>
				<div class='content'>
					<% var arr = event.photos %>
					<% if (arr&&arr.length>0) { %>
						<% for (var i=0; (i< ((arr.length>3)? 3 : arr.length)); i++) { %>
							<a href='/album/view?event=<%= event._id %>'><img src='<%= arr[i] %>'></a>
						<% } %>
					<% } %>
				</div>
			</div>
			<div class='video'>
				<div class='header'>
				</div>
				<div class='content'>
					<% var arr = event.videos %>
					<% if (arr&&arr.length>0) { %>
						<% for (var i=0; (i< ((arr.length>3)? 3 : arr.length)); i++) { %>
							<a href='/valbum?event=<%= event._id %>&mainvid=<%= arr[i] %>'><img src='<%= arr[i] %>'></a>
						<% } %>
					<% } %>
				</div>
			</div>
		</div>
		<% if (current_user) { %>
			<div class='control'>
				<div class='change'>
					<a href='/event/<%= event._id %>/edit'><img src='/img/pencil.png'>Изменить описание</a>
				</div>
				<div class='delete'>
					<a href='/event/delete/<%= event._id %>'><img src='/img/corzina.png'>Удалить</a>
				</div>
			</div>
		<% } %>
	</div>
</div>