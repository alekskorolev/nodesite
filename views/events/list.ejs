<!-- Подключение заголовков -->
<% include ../common/head %>
	<div class="container-other">
	<!-- Блок верхнего меню -->
 		<% include ../common/topmenu %>
		<div class="logo-fon-profil">
			<div class="expert-names">
				<img src="/img/events-fon.png" class="photo-name" >
			</div>
		</div>
 		<div class="content-place">
 			<div class="head-button">
 				<% if (current_user) { %>
					<div class="add-new-event">
			 			Создать событие
			 		</div>			 		
			 		<a href='/profile'>
				 		<div class="go-to-profile">
				 			Профиль
				 		</div>
				 	</a>
			 	<% } else { %>
			 		<a href='/profileview?id=<%= req_user._id %>'>
				 		<div class="go-to-profile">
				 			Профиль
				 		</div>
				 	</a>
				 <% } %>
			</div>

			<div class='events-place'>
				<% if (events.length&&events.length>0) { %>
				<%	events.forEach( function (event) { %>
						<%= include ./_event %>
				<%	}); %>
				<% } else { %>
					<div class='no-event'>
						Не добавлено ни одного события
					</div>
				<% } %> 
			</div>
			 			
 		</div>
		<!-- Блок Футера -->
		<% include ../common/footer %>
		<% include ./_create_window %>
	</div>

		<script type="text/javascript" async="" src='/js/events.js'></script>
</body>
</html>


